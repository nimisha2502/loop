#include <stdio.h>
int main()
{
    int a,i, j, k = 0;
    printf("enter the no. ");
    scanf("%d" ,&a);
       for (i = 0; i < a; i++)
        {
          printf("*");
        }
       for(i=a; i>=1; --i)
        {
          for(j=0; j < a-i; ++j)
          while (k != (2 * i - 1)) {
          if (k == 0 || k == 2 * i - 2)
          printf("*");
          else
          printf(" ");
          k++;

        }
          k = 0;
          printf("\n");
        }
          return 0;
}

